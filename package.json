{
  "name": "bigode",
  "version": "1.0.0",
  "type": "module",
  "description": "Bigode - Um bot para agendamento de Barbearias via WhatsAPP",
  "main": "index.js",
  "scripts": {
    "predev": "npm run services:up && npm run services:wait:database && npx prisma migrate deploy",
    "dev": "tsx watch src/server.ts",
    "postdev": "npm run services:stop",
    "pretest": "npm run services:up && npm run services:wait:database && npx prisma migrate deploy && npx prisma generate",
    "test": "vitest run",
    "posttest": "npm run services:stop",
    "test:watch": "vitest",
    "build": "tsc",
    "prestart": "npx prisma migrate deploy && npx prisma generate",
    "start": "node dist/server.js",
    "test:ci": "npx prisma migrate deploy && npx prisma generate && vitest run",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:wait:database": "tsx src/infra/scripts/wait-for-postgres.ts",
    "lint:prettier:check": "prettier --check --cache .",
    "lint:prettier:fix": "prettier --write --cache .",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint --fix .",
    "seed:test": "tsx prisma/seed/test-barbershop.ts",
    "prepare": "husky || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gomes-leonardo/bigode.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gomes-leonardo/bigode/issues"
  },
  "homepage": "https://github.com/gomes-leonardo/bigode#readme",
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/cz-commitlint": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^10.0.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "pg": "^8.16.3",
    "stripe": "^20.1.2",
    "twilio": "^5.11.2",
    "zod": "^4.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier --write --cache"
  }
}
