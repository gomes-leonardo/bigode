    {
      "name": "Onboarding",
      "description": "Public endpoints for barbershop registration",
      "item": [
        {
          "name": "Create Barbershop (Signup)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.barbershop) {",
                  "    pm.environment.set('barbershopId', jsonData.barbershop.id);",
                  "}",
                  "if (jsonData.admin) {",
                  "    pm.environment.set('adminId', jsonData.admin.id);",
                  "    pm.environment.set('adminPhone', jsonData.admin.phone);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Barbearia do Zé\",\n  \"slug\": \"barbearia-do-ze\",\n  \"phone\": \"+5511999990000\",\n  \"ownerEmail\": \"ze@email.com\",\n  \"ownerPhone\": \"+5511999990001\",\n  \"ownerName\": \"José Silva\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/barbershops",
              "host": ["{{baseUrl}}"],
              "path": ["barbershops"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Auth",
      "description": "Admin authentication via WhatsApp OTP",
      "item": [
        {
          "name": "Request OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.devCode) {",
                  "    pm.environment.set('otpCode', jsonData.devCode);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{adminPhone}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/auth/request-otp",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "auth", "request-otp"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.environment.set('adminToken', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{adminPhone}}\",\n  \"code\": \"{{otpCode}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "auth", "verify-otp"]
            }
          }
        },
        {
          "name": "Get Current Admin (/me)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/me",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "me"]
            }
